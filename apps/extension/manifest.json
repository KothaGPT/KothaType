{
  "manifest_version": 3,
  "name": "KothaType",
  "version": "1.0.0",
  "description": "Phonetic Bangla typing across web inputs",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
